{
    "manifest_version":  2,
    "name":  "GitPulse",
    "version": "1.34",
    "description":  "A browser extension to show activity for repo links before you click them.",
    "permissions":  [
                        "activeTab",
                        "storage",
                        "tabs",
                        "https://api.github.com/*",
                        "https://github.com/*",
                        "https://codeberg.org/*"
                    ],
    "content_scripts":  [
                            {
                                "matches":  [
                                                "\u003call_urls\u003e"
                                            ],
                                "js":  [
                                           "GitPulse/src/compat.js",
                                           "GitPulse/src/config.js",
                                           "GitPulse/src/content/main.helpers.js",
                                           "GitPulse/src/content/main.banner.js",
                                           "GitPulse/src/content/main.links.js",
                                           "GitPulse/src/content/main.detect.js",
                                           "GitPulse/src/content/main.bootstrap.js",
                                           "GitPulse/src/main.js"
                                       ],
                                "run_at":  "document_idle"
                            }
                        ],
    "background":  {
                       "scripts":  [
                                       "GitPulse/src/background.js"
                                   ]
                   },
    "browser_action":  {
                           "default_popup":  "GitPulse/src/popup.html",
                           "default_icon":  {
                                                "16":  "GitPulse/src/icons/icon-16.png",
                                                "32":  "GitPulse/src/icons/icon-32.png",
                                                "48":  "GitPulse/src/icons/icon-48.png",
                                                "128":  "GitPulse/src/icons/icon-128.png"
                                            }
                       },
    "icons":  {
                  "16":  "GitPulse/src/icons/icon-16.png",
                  "32":  "GitPulse/src/icons/icon-32.png",
                  "48":  "GitPulse/src/icons/icon-48.png",
                  "128":  "GitPulse/src/icons/icon-128.png"
              },
    "browser_specific_settings":  {
                                      "gecko":  {
                                                    "id":  "gitpulse@example.com",
                                                    "strict_min_version":  "109.0",
                                                    "data_collection_permissions":  {
                                                                                    "required":  [ "websiteContent" ],
                                                                                    "optional":  [ ]
                                                                                }
                                                }
                                  }
}
